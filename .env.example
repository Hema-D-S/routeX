# Environment Variables for Production Deployment
# Copy this to .env.prod and fill in your actual values

# Domain Configuration
DOMAIN_NAME=yourdomain.com

# Node Environment
NODE_ENV=production

# Database URLs
MONGODB_USERS_URI=mongodb://mongodb-users:27017/users_db
MONGODB_RIDES_URI=mongodb://mongodb-rides:27017/rides_db

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password-change-this

# JWT & Authentication
JWT_SECRET=your-super-secure-jwt-secret-change-this-to-random-string

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key-with-escaped-newlines
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# API Gateway Configuration
API_GATEWAY_PORT=3000
API_GATEWAY_URL=http://api-gateway:3000

# User Service Configuration
USER_SERVICE_PORT=3001
USER_SERVICE_URL=http://user-service:3001

# Ride Service Configuration
RIDE_SERVICE_PORT=3002
RIDE_SERVICE_URL=http://ride-service:3002

# Notification Service Configuration
NOTIFICATION_SERVICE_PORT=3003
NOTIFICATION_SERVICE_URL=http://notification-service:3003

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=https://yourdomain.com/api

# AWS Configuration (optional, if using ECR)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id
ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# SMS Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890
